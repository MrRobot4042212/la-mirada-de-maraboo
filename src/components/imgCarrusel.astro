---
import Image from "astro/components/Image.astro"
import  Grupo1  from "../../public/image/grupo/grupo1.webp"
import  Grupo2  from "../../public/image/grupo/grupo2.webp"
import  Grupo3  from "../../public/image/grupo/grupo3.webp"
import  Grupo4  from "../../public/image/grupo/grupo4.webp"

---
<aside class="slider">
    <ul>
        <li>
            <Image src={Grupo1} alt="Una descripción de mi imagen." decoding="async" loading="lazy" alt="Una descripción de mi imagen." draggable="false" />
        </li>
        <li>
            <Image src={Grupo2} alt="Una descripción de mi imagen." decoding="async" loading="lazy" alt="Una descripción de mi imagen." draggable="false" />
        </li>
        <li>
            <Image src={Grupo3} alt="Una descripción de mi imagen." decoding="async" loading="lazy" alt="Una descripción de mi imagen." draggable="false" />
        </li>
        <li>
            <Image src={Grupo4} alt="Una descripción de mi imagen." decoding="async" loading="lazy" alt="Una descripción de mi imagen." draggable="false" />
        </li>
    </ul>
</aside>

<style>
.slider {
  width: 50%;
  margin: auto;
  overflow: hidden;
}

.slider ul {
    padding: 0;
    display: flex;
    width: 400%;
    text-align: center;
    border-bottom: 10px;

    animation: cambio 20s infinite;
    animation-direction: alternate;
}

.slider li {
  width: 100%;
  list-style: none;
}

.slider img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    background-position: center;
}

@keyframes cambio {
    0% { margin-left: 0; }
    20% { margin-left: 0; }

    25% { margin-left: -100%; }
    45% { margin-left: -100%; }

    50% { margin-left: -200%; }
    70% { margin-left: -200%; }

    75% { margin-left: -300%; }
    100% { margin-left: -300%; }
}
</style>