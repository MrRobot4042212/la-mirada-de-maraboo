---
const { title } = Astro.props;
---

<section class="rowContainer">
    <h1>{title}</h1>
    <slot/>
</section>

<style>
    .rowContainer{
    display: flex;
    justify-content: center;
    align-content: center;
    align-items: center;
    flex-wrap: wrap;
    width: 100%;
}
h1{
    color:#333;
    font-size: 40px;
}
</style>